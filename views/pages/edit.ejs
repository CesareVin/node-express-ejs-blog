<html lang="en">

<head>
     <% include ../partials/head %>
</head>

<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
         <%- include("../partials/header",{menus:[
                { name:"back",active:"is-active",link:"/"}
                ]}) %>
         <main class="mdl-layout__content">
            <div class="mdl-grid">
                <!--Edit  -->
                <div class="mdl-grid mdl-cell mdl-cell--6-col portfolio-max-width">
                    <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
                        <div class="mdl-card__title">
                            <h2 class="mdl-card__title-text">
                                <div class="mdl-textfield mdl-js-textfield">
                                    <label class="mdl-textfield__label" id="txt_id" ><%= article.id %></label>
                                    <input class="mdl-textfield__input" type="text" id="txt_title" value="<%= article.title %>">
                                    <label class="mdl-textfield__label" for="txt_title">TITLE</label>
                                </div>
                            </h2>
                        </div>
                        <div class="mdl-card__media">
                            <form action="/upload" method = 'post' enctype="multipart/form-data">
                                <label for='file'>Upload Image</label>
                                <input type="file" name="img" accept="image/*"/>
                                <input type="hidden" name="someParam" value="someValue"/>
                                <input type="submit" name='submit' value="submit"/>
                            </form>
                        <!-- <img class="article-image" src="images/linuxaudio.jpg" border="0" alt=""> -->
                        </div>
                        <div class="mdl-card__supporting-text">
                            <strong>Includes</strong>
                            <div class="mdl-textfield mdl-js-textfield">
                                    <input class="mdl-textfield__input" type="text" id="txt_include" value="<%= article.include %>">
                                    <label class="mdl-textfield__label" for="txt_include">INCLUDE</label>
                            </div>
                            </br>
                            <strong>Description</strong>
                             <div class="mdl-textfield mdl-js-textfield">
                                    <input class="mdl-textfield__input" type="text" id="txt_description" value="<%= article.description %>">
                                    <label class="mdl-textfield__label" for="txt_description">DESCRIPTION</label>
                            </div>
                        </div>
                        <div class="mdl-grid portfolio-copy" style="width: 100%;">
                            <div class="mdl-textfield mdl-js-textfield"  style="width: 100%;">
                                <textarea class="mdl-textfield__input" type="text" rows= "3" id="txt_content" ><%= article.content %></textarea>
                                <label class="mdl-textfield__label" for="txt_content">CONTENT</label>
                            </div>
                            <button class="mdl-button mdl-js-button mdl-button--raised" id="btn_save">
                                Save Article
                            </button>
                        </div>
                    </div>
                </div>
                 <!--Rendered article  -->
                 <div class="mdl-grid mdl-cell mdl-cell--6-col portfolio-max-width">
                    <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
                        <div class="mdl-card__title">
                            <h2 class="mdl-card__title-text" id="txt_article_title"></h2>
                        </div>
                        <div class="mdl-card__media">
                        <!-- <img class="article-image" src="images/linuxaudio.jpg" border="0" alt=""> -->
                        </div>
                        <div class="mdl-card__supporting-text">
                            <strong>Includes</strong>
                            <span id="txt_article_include"></span>
                            </br>
                            </br>
                            <strong>Description</strong>
                            <span id="txt_article_description"></span>
                        </div>
                        
                        <div class="mdl-grid portfolio-copy" id="txt_article_content">
                            
                        </div>
                    </div>
                </div>
            </div>
            <footer class="mdl-mini-footer">
              <% include ../partials/footer %>
            </footer>
        </main>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <script src="/js/edit.js"></script>
</body>

</html>
